			<info compressed="false">https://raw.githubusercontent.com/totalrevolution/python-koding/master/zips/addons.xml</info>
			<checksum>https://raw.githubusercontent.com/totalrevolution/python-koding/master/zips/addons.xml.md5</checksum>
			<datadir zip="true">https://raw.githubusercontent.com/totalrevolution/python-koding/master/zips/</datadir>
		</dir>
		<info compressed="false">https://raw.githubusercontent.com/scorpium/repository.scorpium-repo/master/zips/addons.xml</info>
		<checksum>https://raw.githubusercontent.com/scorpium/repository.scorpium-repo/master/zips/addons.xml.md5</checksum>
		<datadir zip="true">https://raw.githubusercontent.com/scorpium/repository.scorpium-repo/master/zips/</datadir>
	</extension>
	<extension point="xbmc.addon.metadata">
		<summary lang="en">Repositorio para testar meu primeiro addon.</summary>
		<description lang="en">Este repo ter√° iptv, musicas e filmes.</description>
		<genre>documentary,livetv,movies,music,radio,brazilian,french,uk,usa</genre>
	</extension>
</addon>
</addons>
